CC = gcc
C_PARALLEL_FLAGS = -lpthread
C_SEQUENTIAL_FLAGS = -lm

PARALLEL_PROG_NAME = k_means_parallel.c
SEQUENTIAL_PROG_NAME = k_means_sequential.c

DEST_PARALLEL_NAME = k_means_parallel
DEST_SEQUENTIAL_NAME = k_means_sequential

DEFAULT: sequential

BOTH:
	$(CC) $(PARALLEL_PROG_NAME) $(C_PARALLEL_FLAGS) -o ../bin/$(DEST_PARALLEL_NAME)
	$(CC) $(SEQUENTIAL_PROG_NAME) $(C_SEQUENTIAL_FLAGS) -o ../bin/$(DEST_SEQUENTIAL_NAME)

sequential:
	$(CC) $(SEQUENTIAL_PROG_NAME) $(C_SEQUENTIAL_FLAGS) -o ../bin/$(DEST_SEQUENTIAL_NAME)

